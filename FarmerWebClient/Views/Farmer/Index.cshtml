@model IEnumerable<BusinessObject.Farmer>

@{
    ViewData["Title"] = "Farmers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center px-4 py-3">
            <h3 class="mb-0 fw-bold text-primary">
                <i class="bi bi-people-fill me-2"></i> Farmers List
            </h3>
            <a asp-action="Create" class="btn btn-success rounded-pill px-3">
                <i class="bi bi-plus-lg"></i> Create New
            </a>
        </div>

        <div class="card-body px-4">
            <div class="input-group mb-3">
                <span class="input-group-text bg-light"><i class="bi bi-search"></i></span>
                <input type="text" id="searchBox" class="form-control" placeholder="Search by Code or Name..." />
            </div>

            <div class="table-responsive">
                <table class="table table-hover align-middle" id="farmerTable">
                    <thead class="table-light">
                        <tr>
                            <th>Farmer Code</th>
                            <th>Farmer Name</th>
                            <th>Farmer Name(EN)</th>
                            <th>Address</th>
                            <th>Phone 1</th>
                            <th>Phone 2</th>
                            <th>Insert Date</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@Html.DisplayFor(modelItem => item.FarmerCode)</td>
                                <td>@Html.DisplayFor(modelItem => item.FarmerName)</td>
                                <td>@Html.DisplayFor(modelItem => item.FarmerNameEN)</td>
                                <td>@Html.DisplayFor(modelItem => item.Address)</td>
                                <td>@Html.DisplayFor(modelItem => item.Phone1)</td>
                                <td>@Html.DisplayFor(modelItem => item.Phone2)</td>
                                <td>
                                    <span class="badge bg-secondary">
                                        @Html.DisplayFor(modelItem => item.InsertDate)
                                    </span>
                                </td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.FarmerId"
                                       class="btn btn-sm btn-primary rounded-pill px-3 me-1">
                                        <i class="bi bi-pencil me-1"></i> Edit
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.FarmerId"
                                       class="btn btn-sm btn-info rounded-pill px-3 me-1">
                                        <i class="bi bi-eye me-1"></i> Details
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.FarmerId"
                                       class="btn btn-sm btn-danger rounded-pill px-3">
                                        <i class="bi bi-trash me-1"></i> Delete
                                    </a>
                                </td>


                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const searchBox = document.getElementById("searchBox");
        const table = document.getElementById("farmerTable");
        const rows = table.getElementsByTagName("tr");

        searchBox.addEventListener("keyup", function () {
            const filter = searchBox.value.toLowerCase();

            for (let i = 1; i < rows.length; i++) {
                const cells = rows[i].getElementsByTagName("td");
                if (!cells.length) continue;

                const code = cells[0].textContent.toLowerCase();
                const name = cells[1].textContent.toLowerCase();

                if (code.includes(filter) || name.includes(filter)) {
                    rows[i].style.display = "";
                } else {
                    rows[i].style.display = "none";
                }
            }
        });
    </script>
}
